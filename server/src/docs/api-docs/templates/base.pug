                .cell
                    pre(id="loc1")
                .divider2
                h3 GET /api/locations/:id/:attribute
                div
                    div
                        .attrName
                            h4 id:
                        .attrDesc
                            h4 The id of the location to be retrieved
                    div
                        .attrName
                            h4 attribute:
                        .attrDesc
                            h4 The attribute to retrieve from the location with the specified id
                .cell
                    pre(id="loc2")

            block traffic
                .spacer
                h2(id="traffic") Traffic Types
                .divider
                h3 GET /api/type/:id
                div
                    div
                        .attrName
                            h4 id:
                        .attrDesc
                            h4 The id of the type to be retrieved
                .cell
                    pre(id="traffic1")
                .divider2
                h3 GET /api/type/:id/packets
                div
                    div
                        .attrName
                            h4 id:
                        .attrDesc
                            h4 The id of the type to be retrieved
                .cell
                    pre(id="traffic2")
                .divider2
                h3 GET /api/type/:id/devices
                div
                    div
                        .attrName
                            h4 id:
                        .attrDesc
                            h4 The id of the type to be retrieved
                .cell
                    pre(id="traffic3")
                .divider2
                h3 GET /api/type/:type/packets
                div
                    div
                        .attrName
                            h4 type:
